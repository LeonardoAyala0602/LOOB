<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".login.RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="2dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:src="@drawable/logo_loob" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="358dp"
                android:layout_height="457dp"
                android:layout_margin="16dp"
                android:layout_marginTop="10sp"
                android:background="@color/alterno"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Codigo PUCP:" />

                <EditText
                    android:id="@+id/editCodigoPUCPRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="number"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="DNI:" />

                <EditText
                    android:id="@+id/editDNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="number"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Ocupación:" />

                <EditText
                    android:id="@+id/editOcupacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="text"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Contraseña:" />

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="textPassword"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Confirmar contraseña:" />

                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/login_inputs"
                    android:ems="8"
                    android:inputType="textPassword"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnRegistrarse"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/teal_200"
                    android:gravity="center"
                    android:text="Registrarse"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/alterno"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ya te registraste?"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnReturnLoginForgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/teal_200"
                    android:gravity="center"
                    android:text="Logueate"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>